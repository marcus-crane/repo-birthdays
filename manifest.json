{
  "name": "Repo Birthdays",
  "manifest_version": 3,
  "description": "Adds a badge showing the age of any Github repo you visit",
  "version": "1.1.0",
  "homepage_url": "https://github.com/marcus-crane/repo-birthdays",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*/*"],
      "js": ["birthday.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://github.com/*/*"
  ]
}
